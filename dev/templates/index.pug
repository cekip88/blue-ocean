                    li.sertificates-item
                        a(href='#').sertificates-link
                            +img('sert-2.jpg')
                        div(style='display:none').sertificates-full
                            a(href='#').sertificates-full-close
                            h3.sertificates-full-title KIWA Сертификация (Нидерланды) No. K8767701
                            +img('sert-2.jpg').sertificates-full-img
                    li.sertificates-item
                        a(href='#').sertificates-link
                            +img('sert-3.jpg')
                        div(style='display:none').sertificates-full
                            a(href='#').sertificates-full-close
                            h3.sertificates-full-title SKZ Сертификация (Германия) А528
                            +img('sert-3.jpg').sertificates-full-img
